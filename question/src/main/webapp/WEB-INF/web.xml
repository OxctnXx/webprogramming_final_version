    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>uerNameValideServlet</servlet-name>
        <servlet-class>com.my.question.servlet.UerNameValideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uerNameValideServlet</servlet-name>
        <url-pattern>/uerNameValide</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>quizAnswerServlet</servlet-name>
        <servlet-class>com.my.question.servlet.QuizAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quizAnswerServlet</servlet-name>
        <url-pattern>/quizAnswer</url-pattern>
    </servlet-mapping>

    <!--用户信息存放到session中的键的名字-->
    <context-param>
        <param-name>userSessionKey</param-name>
        <param-value>userName</param-value>
    </context-param>
    <!--若未登录，需要重定向的页面-->
    <context-param>
        <param-name>redirectPage</param-name>
        <param-value>/loginpage.html</param-value>
    </context-param>
    <!--不需要拦截的URL列表;注意配置时不要拦截后台对用户和密码判断的页面,否则可能登录登录不进主界面-->
    <context-param>
        <param-name>uncheckedUrls</param-name>
        <param-value>/index.html,/login,/loginpage.html</param-value>
    </context-param>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.my.question.servlet.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


